<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error_msg| %>
      <p><%= error_msg %></p>
    <% end %>
  <% end %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  <br/>
  <br/>
  <%= f.label :fname %>
  <%= f.text_field :fname %>
  <br/>
  <br/>
  <%= f.label :lname %>
  <%= f.text_field :lname %>
  <br/>
  <br/>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br/>
  <br/>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/>
  <br/>
  <%= f.label :engineer %>
  <%= f.check_box :engineer%>
  <br/>
  <br/>
  <%= f.label :hourly_rate %>
  <%= f.text_field :hourly_rate %>
  <br/>
  <br/>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br/>
  <br/>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br/>
  <br/>
  <%= f.submit %>
<% end %>