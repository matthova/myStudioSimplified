<%= form_for @space do |f| %>
  <% if @space.errors.any? %>
    <% @space.errors.full_messages.each do |error_msg| %>
      <p><%= error_msg %></p>
    <% end %>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <br/>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/>
  <br/>
  <%= f.label :hourly_rate %>
  <%= f.text_field :hourly_rate %>
  <br/>
  <br/>
  <%= f.label :size %>
  <%= f.text_field :size %>
  <br/>
  <br/>
  <%= f.submit %>
<% end %>